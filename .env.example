# 智能文档分析系统 - 环境变量配置示例
# 复制此文件为 .env 并填入实际配置值

# =============================================================================
# LLM配置
# =============================================================================

# 第三方API转发配置 (推荐，支持各种代理服务)
THIRD_PARTY_API_ENABLED=false
THIRD_PARTY_MODEL=gpt-3.5-turbo
THIRD_PARTY_API_KEY=your_third_party_api_key_here
THIRD_PARTY_BASE_URL=https://your-proxy-service.com/v1
THIRD_PARTY_PROVIDER=openai
THIRD_PARTY_MAX_TOKENS=32768

# =============================================================================
# MCP服务器配置 (Model Context Protocol)
# =============================================================================

# MCP服务器配置 - 支持本地和远程服务器
MCP_SERVER_ENABLED=true

# 方式1: 直接填写完整URL (推荐，特别是用于外部服务)
MCP_SERVER_URL=http://localhost:8503

# 外部streamable服务示例:
# MCP_SERVER_URL=https://your-streamable-service.com/mcp
# MCP_SERVER_URL=https://api.yourservice.com/v1/mcp

# 方式2: 分离配置 (可选，用于自定义host和port)
# 如果设置了MCP_SERVER_URL，以下配置将被忽略
# MCP_SERVER_HOST=your-service.com
# MCP_SERVER_PORT=443

# MCP功能配置
MCP_STREAMING_ENABLED=false
MCP_TOOLS_ENABLED=true
MCP_TOOLS_AUTO_REGISTER=true

# MCP智能体配置
MCP_AGENT_MAX_ITERATIONS=10
MCP_AGENT_TIMEOUT=120
MCP_AGENT_SHOW_THINKING=true

# MCP调试配置
MCP_DEBUG=false
MCP_LOG_TOOL_CALLS=true

# =============================================================================
# 应用配置
# =============================================================================

# 调试模式
APP_DEBUG=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 文件上传限制
MAX_FILE_SIZE=50MB

# 支持的文档格式
SUPPORTED_FORMATS=docx,pptx,xlsx,pdf

# Streamlit配置
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# =============================================================================
# 数据库配置 (可选，当前版本使用文件存储)
# =============================================================================

# DATABASE_URL=sqlite:///./document_analysis.db
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# 安全配置
# =============================================================================

# 会话密钥 (生产环境请使用强密钥)
SECRET_KEY=your_secret_key_here

# CORS设置
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# =============================================================================
# 性能配置
# =============================================================================

# 并发处理数量
MAX_WORKERS=4

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL=3600

# 内存限制 (MB)
MAX_MEMORY_MB=1024
