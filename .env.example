# 智能文档分析系统 - 环境变量配置示例
# 复制此文件为 .env 并填入实际配置值

# =============================================================================
# LLM配置
# =============================================================================

# Ollama配置 (推荐，本地部署)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=120

# OpenAI配置 (可选)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MAX_TOKENS=4000
OPENAI_TIMEOUT=60

# 第三方API转发配置 (可选，支持各种代理服务)
THIRD_PARTY_API_ENABLED=false
THIRD_PARTY_API_KEY=your_third_party_api_key_here
THIRD_PARTY_BASE_URL=https://your-proxy-service.com/v1
THIRD_PARTY_PROVIDER=openai

# =============================================================================
# 应用配置
# =============================================================================

# 调试模式
APP_DEBUG=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 文件上传限制
MAX_FILE_SIZE=50MB

# 支持的文档格式
SUPPORTED_FORMATS=docx,pptx,xlsx,pdf

# Streamlit配置
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# =============================================================================
# 数据库配置 (可选，当前版本使用文件存储)
# =============================================================================

# DATABASE_URL=sqlite:///./document_analysis.db
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# 安全配置
# =============================================================================

# 会话密钥 (生产环境请使用强密钥)
SECRET_KEY=your_secret_key_here

# CORS设置
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# =============================================================================
# 性能配置
# =============================================================================

# 并发处理数量
MAX_WORKERS=4

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL=3600

# 内存限制 (MB)
MAX_MEMORY_MB=1024
